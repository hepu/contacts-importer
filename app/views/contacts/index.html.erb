<h1>Contacts</h1>
<div class="d-flex justify-content-end">
  <%= link_to new_import_path, class: 'btn btn-primary' do %>
    <i class="fa-solid fa-upload"></i> Import contacts
  <% end %>
</div>
<div class="table">
  <table class='table table-striped'>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Address</th>
        <th>Date of Birth</th>
        <th>Last 4</th>
        <th>Email</th>
        <th>Phone number</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% if @contacts.empty? %>
        <tr>
          <td colspan="7" class="text-muted text-center">No contacts found</td>
        </tr>
      <% else %>
        <%= render @contacts %>
      <% end %>
    </tbody>
  </table>
</div>
<% if @contacts.total_count > 0 %>
  <div class="mb-2 row">
    <div class="col text-center text-muted">
      Total contacts: <%= @contacts.total_count %>
    </div>
  </div>
<% end %>
<%= paginate @contacts %>